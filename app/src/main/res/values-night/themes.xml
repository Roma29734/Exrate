<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Exrate" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="android:windowBackground">@color/black</item>
    </style>

    <!--    TextView-->

    <style name="textNameCurrency" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textRate" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textNameCurrencySecond" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="secondTextMarket" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/secondGrey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="mainTextMarket" parent="TextAppearance.AppCompat" >
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--    -->

    <!--    ImageButton-->

    <style name="imageButtonSearch" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="imageLogo" parent="Widget.AppCompat.ImageButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="mainImage">
        <item name="android:tint">@color/white</item>
    </style>

    <!--    -->

    <!--    More-->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="editTextColor">@color/white</item>
        <item name="hintTextColor">@color/white</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_search_white</item>
        <item name="searchHintIcon">@color/white</item>
    </style>
    <!--    -->



    <style name="cardViewTradingActivity" parent="CardView" >
        <item name="android:backgroundTint">@color/mainDarkBlue</item>
        <item name="cardCornerRadius">32dp</item>
    </style>


    <style name="cardViewProfileMain" parent="CardView">
        <item name="android:backgroundTint">@color/mainDarkBlue</item>
        <item name="android:tint">@android:color/transparent</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background_border</item>
    </style>

    <style name="bottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/black</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="android:textColor">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

    <style name="mainRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/radion_white_button_selector</item>
        <item name="android:backgroundTint">@color/mainRed</item>
    </style>
</resources>